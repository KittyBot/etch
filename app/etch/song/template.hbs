{{outlet}}

<div class="modal is-active">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">{{emoji-character "notes"}}Pick a song, any song...{{emoji-character "notes"}}</p>

    </header>
    <section class="modal-card-body">

      <div class="container">
          <h1>Search artist or song</h1>

          {{!-- <div class="control">
            <div class="select is-fullwidth"> --}}
              {{#power-select
                search=(action "searchSong")
                selected=selected
                onchange=(action (mut selected))
                as |track|}}
                {{#each track.artists as |artist|}}
                  {{artist.name}}
                {{/each}} -
                {{track.name}}
              {{/power-select}}
            {{!-- </div>
          </div> --}}

          <div id="results"></div>
      </div>
          {{#each albums.items}}
          <div style="background-image:url({{images.0.url}})" data-album-id="{{id}}" class="cover"></div>
          {{/each}}

    </section>
    <footer class="modal-card-foot">

      {{!-- {{#link-to "etch/emo"}} --}}
      <a class="button is-warning">Next</a>
      {{!-- {{/link-to}} --}}

      {{#link-to "etch"}}
      <a class="button is-warning">Cancel</a>
      {{/link-to}}

    </footer>
  </div>
</div>
