{{outlet}}

<div class="profile-container">

  <div class="profile">
    {{profile-pic user=model}}
  </div>

  <div class="info content">
    <h1>@{{model.username}}</h1>{{!-- <h2>Nashville, TN.</h2>
    <h2>http://kittybotblog.io</h2> --}}
  </div>

</div>

<div class="memories">
  {{#each (take 4 model.memories) as |memory|}}
    <div class="memory">
      <div class="record record--with-center">
        <img class="record__pic" src="http://www.comparevinyl.com/assets/blank_record-88f526f5bf343a5eba24e53c62acfe85.png" />
      </div>
    </div>
  {{/each}}
</div>
